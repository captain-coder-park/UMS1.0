{% extends 'outbase.html.twig' %}
{% block body %}
    <h4 class="common_head4">Login</h4>
    <div class="container">
        <div class="row">
            <div style="padding:5% 15% 5% 15%">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="_username" required="required" class="form-control" value="{{ last_username }}" />
                    </div>

                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" required="required" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary pull-right">Login</button>
                </form>
                <div>OR<br> <a href="{{ path('register')}}">New User?</a></div>
            </div>
        </div>
    </div>
{% endblock %}